generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// enums
enum Role {
  SUPER_ADMIN
  SCHOOL_ADMIN
  TEACHER
  STUDENT
}

// models

model Tenant {
  id         String   @id @default(uuid())
  name       String
  address    String
  logo       String?
  adminEmail String
  config     Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  users    User[]
  subjects Subject[]
  teachers Teacher[]
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  tenantId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant? @relation(fields: [tenantId], references: [id])
}

model Subject {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String?
  tenantId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
  teachers Teacher[] @relation("TeacherSubjects")
}

model Teacher {
  id    String @id @default(uuid())
  name  String
  email String @unique
  tenantId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
  subjects Subject[] @relation("TeacherSubjects")
}
